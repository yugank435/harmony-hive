generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  }

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  currentRoomId Int @default(-1)
  createdAt DateTime @default(now())
}

model Room {
  id         Int      @id @default(autoincrement())
  name       String?
  password   String
  ownerId    Int
  roomMember Int[]
  createdAt  DateTime @default(now())
}

model SongQueue {
  id Int @id @default(autoincrement())
  roomId Int 
  userId Int 
  ytVideoId String
  title String
  channel String
  thumbnail String
  addedAt DateTime @default(now()) 
}
